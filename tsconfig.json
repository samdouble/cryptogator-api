{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "types": ["mocha", "node"]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./build",
    "./node_modules",
  ]
}
